<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <SearchView
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:id="@+id/searchsmsrecived"
                android:iconifiedByDefault="false"
                >
                <requestFocus />
            </SearchView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <Button
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:text="Cuộc gọi"
                android:padding="5dp"
                android:id="@+id/btnCallLog1"/>
            <Button
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:text="Hộp thư đến"
                android:id="@+id/btnSmsReceved1"/>
            <Button
                android:layout_width="115dp"
                android:padding="5dp"
                android:layout_height="50dp"
                android:text="Hộp thư đi"
                android:id="@+id/btnSmsSent1"/>

        </LinearLayout>


        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listsmsrecived"
           ></ListView>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>